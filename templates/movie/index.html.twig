{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}


    <div class="container-fluid mb-4">

        <div class="row mt-3 ml-3">
            <h1>Films </h1>

            <div class="dropright my-auto ml-2">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Genres
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {% for genre in genres %}
                        <a class="dropdown-item" href="{{ path('movie_index_genre', {Name:genre.name}) }}">{{ genre.name }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>



    <div class="container-fluid">

        <div class="row align-items-stretch">

            {% for movie in movies %}
                    <div class="col-3 mb-3">
                        <div class="card h-100">
                            <img src="https://image.tmdb.org/t/p/w500{{ movie.image }}" class="card-img-top" alt="...">

                            {% if app.user %}
                                {% set movieClass='far' %}
                                {% if movie in app.user.movies %}
                                    {% set movieClass = 'fas' %}
                                {% endif %}
                                    <i class="{{ movieClass }} fa-star movie-fav"  data-id="{{ movie.id }}"></i>
                            {% endif %}

                            <div class="card-body position-relative">
                                <h5 class="card-title">{{ movie.title }}</h5>
                                <p class="card-text" style="margin-bottom:70px">{{ movie.overview }}</p>
                                <div class="position-absolute" style="bottom:3px">

                                    {% for genre in movie.genres %}
                                        <a>{{ genre.name }}</a>{% if not loop.last %}, {% endif %}
                                    {% endfor %}

                                    <p class="card-test my-flex align-middle">
                                        <a href="{{ path('movie_show', {id:movie.id}) }}" class="btn btn-warning mx-auto">Voir</a>                                      
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}
